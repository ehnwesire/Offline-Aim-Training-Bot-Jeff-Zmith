//
// All profiles begin with this data and overwrite their own
//
Default
	Skill = 100
	Aggression = 20
	ReactionTime = 0.01
	AttackDelay = 0
	Teamwork = 10
	AimFocusInitial = 20			// initial focus spread in degrees (from desired center)
	AimFocusDecay = 0.7				// how much focus shrinks per sSMGnd (.25 = 25% of size after 1 sec)
	AimFocusOffsetScale = 0.1		// controls accuracy when tracking to target (0 == perfect, should always be < 1)
	AimfocusInterval = 0.1			// how often focus is adjusted (smaller intervals means better movement tracking)
	WeaponPreference = none
	Cost = 0
	Difficulty = NORMAL
	VoicePitch = 100
	Skin = 0
	LookAngleMaxAccelNormal = 2000.0 // these vars seems to be how the bot actually aims!
	LookAngleStiffnessNormal = 100.0
	LookAngleDampingNormal = 4.0
	LookAngleMaxAccelAttacking = 3000.0
	LookAngleStiffnessAttacking = 150.0
	LookAngleDampingAttacking = 5.0
End

